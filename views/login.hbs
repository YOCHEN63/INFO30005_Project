<div class="login-diabetes-left">
    <img class="login-photo" src="logo/login-page-logo.png">
</div>
<div class="login-diabetes-right">
    <a href="/home">
        <img class="loginarrow_icon" src="./image/left-arrow.png">
    </a>
    
    <div class="login-right-content">
        <h1>Log in</h1>
        <h2>Please enter your details.</h2>
        <form method="post" action="/login">
            <h3><label>Email</label></h3>
            <input type="text" id="email" name="email" required>
            <h3><label>Password</label></h3>
            <input type="password" id="password" name="password" required>

            {{!-- <a href="/changePassword"> <h4>forget password/change password</h4></a> --}}
            <input type="submit" value="Sign in" class="login-submit" id="submit">
        </form>
    </div>
</div>

{{#each flash}}
<p class="alert">{{this}}</p>
{{/each}}
<script src="./javascripts/login.js"></script>
