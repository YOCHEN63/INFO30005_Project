<div class="clinician_nav">
    <a href="/clinician">
        <img src="./logo/Diabetes @Home (8).png" class="round_icon">
    </a>
    {{#with docData}}
    <a>
        <p class="segoeui_regular_blue">Hi, {{this.first_name}}</p>
    </a> 
    {{/with}}
    <a href="#">
        <img src="./logo/home.png" class="nav_icon">
    </a>
    <a href="#">
        <img src="./logo/multiple-users-silhouette (1).png" class="nav_icon">
    </a>
    <!-- 加comment页面的-->
    <a href="#">
        <img src="../logo/comment.png" class="nav_icon">
    </a>
</div>

<div class="table_name">
    <h1 class="roboto_regular_black_48px">Comments</h1>
</div>

<div class="clinician_main_left_column">
    <table class="Main_Table_list">
        <!-- category -->
        <tr>
            
            <th>Name</th>
            <th>Comment</th>
            <th>Type of Data</th>
            <th>Data Recorded</th>
            
        </tr>
		{{#each all_comments}}
        <tr>  
            <td>
                <a href="/clinician/{{this._id}}">
                    {{this.first_name}} {{this.last_name}}
                </a>
            </td>    
            <td>{{this.comment}}</td>
            <td>{{this.weight}}</td>
            <td>{{this.record_date}}</td>    
            
        </tr>
        {{/each}}

    </table>
</div>

<!-- Doctor card -->
{{#with docData}}
<div class="clinician_main_right_column">
    
    <div class="patitetn_card">
        <img src={{this.img}}>
        <h2 class="segoeui_regular_blue">Client: {{this.first_name}} {{this.last_name}}</h2>
        <p class="roboto_regular_gray_24px">{{this.email}}</p>
    </div>
</div>
{{/with}}
