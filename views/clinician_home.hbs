<!-- nav bar -->
<div class="clinician_nav">
    <a href="/clinician">
        <img src="./logo/Diabetes @Home (8).png" class="round_icon">
    </a>
    {{#with docData}}
    <a>
        <p class="segoeui_regular_blue">Hi, {{this.first_name}}</p>
    </a> 
    {{/with}}
    <a href="/clinician">
        <img src="./logo/home.png" class="nav_icon">
    </a>
    <!-- 加comment页面的-->
    <a href="clinician/comments">
        <img src="../logo/comment.png" class="nav_icon">
    </a>

    <button id="new_patient" class="segoeui_bold_white">New Patient</button>
</div>

<!-- New Patient Modal-->
<div id="new_patient_modal">

    <div id="new_patient_modal_content">
        <span id="modal_content_close">
            <img src="/logo/close.png">
        </span>
        
        <h2> New Patient Form</h2>

        <form action='/clinician/register' method ='post' class="new_patient_form">
            <!-- Error message, if password length is not met-->
            {{#if flash}}
            <p class="error-message">*{{flash}}</p>
            {{/if}}
            <label for="#">First Name:</label><br>
            <input id="#" placeholder=" eg: John" name="first_name"><br>

            <label for="#">Last Name:</label><br>
            <input id="#" placeholder=" eg: Wick" name="last_name"><br>

            <label for="#">Email</label><br>
            <input id="#" placeholder=" --@example.com kg" name="email"><br>

            <label for="#">Password</label><br>
            <input id="#" placeholder=" Enter at least 8 characters" name="password"><br>

            <label for="#">nick_name</label><br>
            <input id="#" placeholder=" --" name="nick_name"><br>

            <button type="submit" class="segoeui_bold_white" id="new_patient_form_submit">
                Submit 
            </button><br>
        </form>
    </div>
</div>

<div class="table_name">
    <h1 class="roboto_regular_black_48px">My patient</h1>
</div>

<!-- Comments table -->
<div class="clinician_main_left_column">
    <table class="Main_Table_list">
        <!-- category -->
        <tr>
            <th>Name</th>
            <th>Blood glucose level(Nmol/g)</th>
            <th>Weight(kg)</th>
            <th>Doses of insulin taken</th>
            <th>Exercise(steps)</th>
        </tr>
		{{#each patientData}}
        <tr>  
            <td><a href="/clinician/{{this._id}}">{{this.first_name}} {{this.last_name}}</a></td>    
            {{#if bgl_over}} 
            <td class="element_over_threshold">{{this.bloodGlucose}}</td>
            {{else}}
            <td>{{this.bloodGlucose}}</td>
            {{/if}}
            {{#if weight_over}} 
            <td class="element_over_threshold">{{this.weight}}</td>
            {{else}}
            <td>{{this.weight}}</td>
            {{/if}}
            {{#if insulin_over}} 
            <td class="element_over_threshold">{{this.insulin}}</td>
            {{else}}
            <td>{{this.insulin}}</td>
            {{/if}}
            {{#if exercise_over}} 
            <td class="element_over_threshold">{{this.exercise}}</td>
            {{else}}
            <td>{{this.exercise}}</td>
            {{/if}} 
        </tr>
        {{/each}}
    </table>
</div>

<!-- Doctor card -->
{{#with docData}}
<div class="clinician_main_right_column">
    
    <div class="patitetn_card">
        <img src={{this.img}}>
        <h2 class="segoeui_regular_blue">Client: {{this.first_name}} {{this.last_name}}</h2>
        <p class="roboto_regular_gray_24px">{{this.email}}</p>
    </div>
</div>
{{/with}}

<script type="text/javascript" src="../javascripts/script.js"></script>