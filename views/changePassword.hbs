<div class="login-diabetes-left">
        <img class="login-photo" src="logo/login-page-logo.png">
</div>
    <div class="login-diabetes-right">
        <a href="/patient">
            <img class="loginarrow_icon" src="./image/left-arrow.png">

        </a>
        <div class="change-right-content">
            <form method="post" action="">
                <h1>Change Password</h1>
                {{#if flash}}
                <p class="alert">*{{flash}}</p>
                {{/if}}
                
                <h3><label>New Password</label></h3>
                <input type="password" id="password" name ="new_password">
                <h3><label>Confirm Password</label></h3>
                <input type="password" id="password" name ="confirm_password">
                <h5><input type="submit" value="Submit" class="login-submit" id="submit"></h5>
            </form>
        </div>
    </div>