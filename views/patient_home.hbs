<!-- top part-->
{{#if data.support_message}}    
<div class="home_font">
    <marquee direction="left" class="marquee-desktop">
        <b>MESSAGE FROM CLINICIAN:</b>
        {{data.support_message}}
    </marquee>

    <marquee direction="up" scrollamount="1" class="marquee-iphone">
        <b>MESSAGE FROM CLINICIAN:</b><br>
        {{data.support_message}}
    </marquee>
    <div class="home"><b>Home</b></div> 
    <div class="date_font">{{this.date}}</div>
    
</div>
{{/if}}


{{#with data}}    
<div class="patient_profile"> 
    <img class="profile_img" src={{this.img}}>
    <p class="profile_name"> <b>{{this.first_name}} {{this.last_name}}</b> </p>
    <p class="profile_email"> {{this.email}}</p>
    {{/with}}
    {{#if show_bandage.show_bandage}}
    <div class="tooltip"> 
    <img class="medal" src="./logo/medal.png">
    <span class="tooltiptext">Congratulations! Your engagement rate is over 80% </span>
    </div>
    {{/if}}
</div>


<!-- today record part(middle-->
<div class="today-record-session">
<div class="today_record">
    <p class="today_record_text"> <b>Today's Record</b>
    
    
    </p>
<!-- blood glucose level -->
    {{#if record_bgl}} 
    <p class="align_left"> <b>Blood glucose level</b></p> 
    

    {{#if bgl_data}} 
    <p class="align_right"><b>{{bgl_data.blood_glucose_level}}</b> Nmol/L</p>
    
    <div style="clear: both;"></div>
       
    <div class="bubbleText" id="maybe_text">
        <p id="maybe_comment">{{bgl_data.comment}} </p>
        <time>{{bgl_data.record_date}}</time>
    </div>
    {{else}}
    <!-- add a pop up page for adding data and comment-->
    
    <button class="comment_button" id="bgl_add_button"><img class="add_icon_blue" src="./logo/add (2).png"></button>
    <div class= "gray_cover" id="gray_form"></div>
    <div class="form-popup" id="bgl_form">
        <form action="/" method="post" class="form-container">
            <h1>Record Your Data</h1>
        
            <label for="data_field"><b>Blood Glucose Level</b></label>
            <input type="text" placeholder="Enter Blood Glucose Level (Nmol/L)" name="blood_glucose_level" required />
        
            <label for="comment_field"><b>Comment</b></label>
            <input type="text" placeholder="Enter Your Comment (Optional)" name="comment"/>
        
            <button type="submit" class="submit_button" onclick="SubmitRequiredData()">Submit</button>
            <button type="button" class="close_button" id="bgl_close">Close</button>
        </form>
    </div>
    <p class="align_right"><b>--</b> Nmol/L</p>
    
    <div style="clear: both;"></div>
       
    <div class="bubbleText_noRecord" id="maybe_text">
        <p id="maybe_comment">not recorded yet </p>
    </div>
    {{/if }}
    {{/if }}
<!-- weight -->
    {{#if record_weight}} 
    <p class="align_left"> <b>Weight</b></p> 
    
    {{#if weight_data}} 
    <p class="align_right"><b>{{weight_data.weight}}</b> Kg</p>

    <div style="clear: both;"></div>

    <div class="bubbleText">
        <p id="maybe_comment">{{weight_data.comment}} </p>
        <time>{{weight_data.record_date}}</time> 
    </div>
    {{else}}
    <!-- add a pop up page for adding data and comment-->
    <button class="comment_button" id="weight_add_button"><img class="add_icon_blue" src="./logo/add (2).png"></button>
    <div class= "gray_cover" id="gray_form_1"></div>
    <div class="form-popup" id="weight_form">
        <form action="/" method = "post" class="form-container">
            <h1>Record Your Data</h1>
        
            <label for="data_field"><b>Weight</b></label>
            <input type="text" placeholder="Enter Weight (kg)" name="weight" required>
        
            <label for="comment_field"><b>Comment</b></label>
            <input type="text" placeholder="Enter Your Comment (Optional)" name="comment">
        
            <button type="submit" class="submit_button" onclick="SubmitRequiredData()">Submit</button>
            <button type="button" class="close_button" id="weight_close">Close</button>
        </form>
    </div>
    <p class="align_right"><b>--</b> Kg</p>

    <div style="clear: both;"></div>

    <div class="bubbleText_noRecord">
        <p id="maybe_comment">not recorded yet </p>
    </div>
    {{/if}}
    {{/if}}
